<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShomalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/castle03" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <ImageView
                android:id="@+id/castle02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/castle02" />

            <ImageView
                android:id="@+id/castle03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/castle01" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="قلعه رودخان بر فراز ارتفاعات جنگلی شهرستان فومن در روستای زیبای رودخان بعد از طی کردن 1000 پله"
            android:layout_marginTop="15sp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="4dp"
            />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/masole02"
            android:layout_marginTop="20sp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="20sp"
            >


            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/masole01"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/masole03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/masole03" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ماسوله خوش آب و هوا، تابستان خنک"
            android:layout_marginTop="15sp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="4dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            >

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خانه"
                android:background="#87d14a"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/kish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کیش"
                android:background="#87d14a"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />




        </LinearLayout>

















    </LinearLayout>











</ScrollView>